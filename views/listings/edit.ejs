<% layout("/layouts/boilerplate") %>

<body>
    <h3>Edit your Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3" >
            <label for="title" class="form-label">Title :</label>
             <input type="text" value="<%= listing.title  %>" name="title" class="form-control" required>
        </div>
        <div class="mb-3" >
            <label for="description" class="form-label">Description :</label>
            <textarea name="description" style="resize: none;" class="form-control" rows="5" required ><%= listing.description  %>  </textarea>
        </div>
        <p>Original listing Image : </p> 
        <div class="mb-3 "  style="height: 10rem ;width: 20rem; overflow: hidden;">
           <img src="<%= originalImageUrl  %>" alt="Listing img" style="object-fit: fill; height: 100%; border-radius: 1rem;">
        </div>
        <div class="mb-3" >
            <label for="image" class="form-label">Upload Image:</label>
            <input type="file" value="<%= listing.image.url  %>" name="image[url]" class="form-control" >
        </div>
        <div class="mb-3" >
            <label for="price" class="form-label">Price :</label>
            <input type="number" class="form-control" value="<%= listing.price  %>" name="price" required>
        </div>
        <div class="mb-3" >
            <label for="location" class="form-label">Location :</label>
            <input type="text" class="form-control"  value="<%= listing.location  %>" name="location" required>
        </div>
        <div class="mb-3" >
            <label for="country" class="form-label">Country :</label>
            <input type="text" class="form-control" value="<%= listing.country  %>" name="country" required>
        </div>
 
        <button class="btn btn-dark">Add</button>
    </form>
</body>
