<% layout("/layouts/boilerplate") %>
   
<div class="row mt-3">
    <div class="col-8 offset-2">

    <h3>Listing Detail : </h3>
    <img src="<%= listing.image.url  %>" class="card-img-top show-img" alt="Listing-Image">
    <div class="card-body">
      <h5 class="card-title"><b><%= listing.title  %></b></h5>
      <p class="card-text"><%= listing.description  %></p>
      <p>&#8377 <%= listing.price.toLocaleString("en-IN")  %></p>
      <p><%= listing.location  %> </p>
      <p><%= listing.country  %> </p>
     
    </div>

   <div class="buttons">
     <form action="/listing/<%= listing._id  %>/edit" method="get">
            <button class="btn btn-dark">Edit Route</button>
        </form>
        <br>
 
        <form action="/listing/<%= listing._id  %>?_method=DELETE" method="post">
            <button class="btn btn-dark">Delete Route</button>
        </form>

   </div>
   <br><hr>
   <div class="col-8 offset-2 mb-3">
    <h4>Leave a Review</h4>
    <form action="">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" max="5" min="1" id="rating" name="review[rating]" class="form-range">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
   </div>
       
    
</div></div>
